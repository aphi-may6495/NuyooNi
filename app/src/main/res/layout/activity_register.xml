<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="270dp"
            android:layout_height="271dp"
            android:layout_marginVertical="@dimen/padding_ver"
            android:layout_marginTop="36dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sucRegTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/galaxyregular"
            android:text="สร้างบัญชี"
            android:textSize="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo" />

        <EditText
            android:id="@+id/editTextTextEmailAddress2"
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:background="@color/colorYellow"
            android:ems="10"
            android:fontFamily="@font/galaxyregular"
            android:inputType="textEmailAddress"
            android:hint="อีเมล"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sucRegTV" />

        <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_width="205dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorYellow"
        android:ems="10"
        android:fontFamily="@font/galaxyregular"
        android:inputType="textPassword"
        android:hint="รหัสผ่าน"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress2" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorYellow"
            android:ems="10"
            android:fontFamily="@font/galaxyregular"
            android:inputType="textPersonName"
            android:hint="ชื่อ"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword2" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorYellow"
            android:ems="10"
            android:fontFamily="@font/galaxyregular"
            android:inputType="textPersonName"
            android:hint="นามสกุล"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorYellow"
            android:ems="10"
            android:fontFamily="@font/galaxyregular"
            android:inputType="phone"
            android:hint="เบอร์โทรศัพท์"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2"
            app:layout_constraintVertical_bias="0.133" />

        <Button
            android:id="@+id/backbtn"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_marginStart="-6dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorGreen"
            android:fontFamily="@font/galaxyregular"
            android:text="ย้อนกลับ"
            android:textSize="40dp"
            app:layout_constraintEnd_toStartOf="@+id/confirm"
            app:layout_constraintHorizontal_bias="0.087"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextPhone" />

        <Button
            android:id="@+id/confirm"
            android:layout_width="75dp"
            android:layout_height="39dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="16dp"
            android:background="@color/colorGreen"
            android:fontFamily="@font/galaxyregular"
            android:text="ยืนยัน"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextPhone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>