<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterSuccess">
    <ImageView
        android:id="@+id/person"
        android:layout_width="174dp"
        android:layout_height="213dp"
        android:layout_marginVertical="@dimen/padding_ver"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/person2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toEndOf="@+id/person2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.374" />

    <ImageView
        android:id="@+id/person2"
        android:layout_width="169dp"
        android:layout_height="213dp"
        android:layout_marginVertical="@dimen/padding_ver"
        android:contentDescription="@string/app_name"
        android:src="@drawable/person"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.364" />

    <TextView
        android:id="@+id/sucRegTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/galaxyregular"
        android:text="สมัครเสร็จสิ้น"
        android:textSize="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/person" />

    <Button
        android:id="@+id/btnSucReg"
        android:layout_width="210dp"
        android:layout_height="80dp"
        android:background="@color/colorGreen"
        android:fontFamily="@font/galaxyregular"
        android:text="เริ่มต้นใช้งาน"
        android:textSize="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sucRegTV" />


</androidx.constraintlayout.widget.ConstraintLayout>